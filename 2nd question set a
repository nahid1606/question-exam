#include<stdio.h>
int main()
{
    int arr[100],i,tmp,j,n,item,left,right,mid,found=0;

    printf("Array limit: ");
    scanf("%d",&n);

    printf("Initial array:\n");
    for(i=0; i<n; i++)
    {
        scanf("%d",&arr[i]);
    }
    for(i=0;i<n;i++)
    {
        for(j=0;j<n-1;j++)
        {
            if(arr[j]>arr[j+1])
            {
                tmp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=tmp;

            }
        }
    }
    printf("sorted array:\n");
    for(i=0;i<n;i++)
    {
        printf("%d\n ",arr[i]);
    }
    printf("enter item:");
    scanf("%d",&item);
    left=1;
    right=n;
    while(left<=right)
    {
        mid=(left+right)/2;
        if(arr[mid]==item)
        {
            printf("%d found at index:%d",item,i);
            found++;
            break;
        }
        else if(arr[mid]<item)
        {
            left=mid+1;
        }
        else
        {
            right=mid-1;
        }
    }
    if(found==0)
    {
        printf("item not found");
    }



}
