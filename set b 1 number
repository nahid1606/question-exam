#include<stdio.h>
int main()
{
    int arr1[100], arr2[100], mergearr[200],n1, n2, i;


    printf("First array limit: ");
    scanf("%d", &n1);
    printf("Enter elements of first array:\n");
    for(i=0; i<n1; i++)
    {
        scanf("%d", &arr1[i]);
    }

    printf("Second array limit: ");
    scanf("%d", &n2);
    printf("Enter elements of second array:\n");
    for(i=0; i<n2; i++)
    {
        scanf("%d", &arr2[i]);
    }

    for(i=0; i<n1; i++)
    {
        mergearr[i] = arr1[i];
    }


    for(i=0; i<n2; i++)
    {
        mergearr[n1 + i] = arr2[i];
    }

    printf("Merged array:\n");
    for(i=0; i<n1+n2; i++)
    {
        printf("%d ", mergearr[i]);
    }

    return 0;
}
